            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-primary" />
            </div>

            <br />

            <div class="form-group">
                <img src="@ViewBag.QrCodeUri" class="img-thumbnail" />
            </div>
        </form>

